<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joanne.frienddate" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".global"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.joanne.frienddate.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.joanne.frienddate.login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.homepage"
            android:label="@string/title_activity_homepage" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.frienddates"
            android:label="@string/title_activity_frienddates" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.browse"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.post"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.sample"
            android:label="@string/title_activity_sample" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.add"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="com.joanne.frienddate.post_success"
            android:label="@string/title_activity_post_success" >
        </activity>
    </application>

</manifest>
